{
  "name": "vgreborn-monorepo",
  "private": true,
  "workspaces": [
    "web",
    "mitm-monitor",
    "supabase"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=web",
    "dev:monitor": "npm run dev --workspace=mitm-monitor",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:monitor\"",
    "build": "npm run build --workspaces",
    "install:all": "npm install",
    "deploy:monitor": "pm2 deploy mitm-monitor/ecosystem.config.js production setup"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}